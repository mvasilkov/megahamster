{
    "manifest_version": 2,
    "name": "Megahamster",
    "short_name": "Megahamster",
    "description": "Monumental hamsters",
    "version": "0.0.1",
    "icons": {
        "48": "ico48.png",
        "128": "ico128.png"
    },
    "permissions": ["activeTab", "storage", "https://api.mongolab.com/"],
    "background": {
        "scripts": ["reqwest.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "ico19.png",
            "38": "ico38.png"
        },
        "default_title": "Megahamster"
    },
    "options_page": "options.html",
    "incognito": "split"
}
